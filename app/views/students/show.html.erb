<p style="color: green"><%= notice %></p>
<div class ="main-container">
    <div class="main-header">
    <%= image_tag("adnu-seal.png") %>
    </div>

    <%= render @student %>
    <% if @student.courses.present? %>
      <h2>List of Subjects</h2>
      <table>
        <thead class="header">
        <th>Name</th>
        <th>Section</th>
        <th>Number of Units</th>
        <th>Number of Students</th>
        <th>Per Unit Rate</th>
        </thead> 
        <tbody>
          <% @student.courses.each do |course|%>
            <tr>
            <td><%=course.subject.name%></td>
            <td><%= course.subject.section %></td>
            <td><%= course.subject.number_of_units %></td>
            <td><%= course.subject.number_of_students %></td>
            <td><%= course.subject.per_unit_rate %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>

<div>
  <%= link_to "Edit this student", edit_student_path(@student) %> |
  <%= link_to "Back to students", students_path %>

  <%= button_to "Destroy this student", @student, method: :delete %>
</div>
